<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:actionBarNavMode="list">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="DB content:" />
    <Mvx.MvxListView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        local:MvxBind="ItemsSource OriginalItems" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="DB content filtered with name=Granat:" />
    <Mvx.MvxListView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        local:MvxBind="ItemsSource FilteredItems" />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Next test"
        local:MvxBind="Click NextCommand" />
</LinearLayout>